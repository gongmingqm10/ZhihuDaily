<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:background="@color/bg_page">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/l_space">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/shot_author_avatar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            tools:src="@mipmap/default_avatar" />

        <TextView
            android:id="@+id/shot_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/s_space"
            android:layout_toEndOf="@id/shot_author_avatar"
            android:textColor="@color/font_material_gray"
            android:textSize="@dimen/font_size_medium"
            android:textStyle="bold"
            tools:text="Circles" />

        <TextView
            android:id="@+id/shot_author_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/shot_title"
            android:layout_below="@id/shot_title"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/font_size_small"
            tools:text="by Creativedash on May 31, 2016" />
    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/l_space"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/shot_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/l_space"
            tools:src="@mipmap/default_avatar" />
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/l_space"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/shot_view_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="3dp"
            android:drawableStart="@mipmap/ic_eye"
            android:gravity="center_vertical"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/font_size_tiny"
            tools:text="2,554" />

        <TextView
            android:id="@+id/shot_comment_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/m_space"
            android:drawablePadding="3dp"
            android:drawableStart="@mipmap/ic_message"
            android:gravity="center_vertical"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/font_size_tiny"
            tools:text="7" />

        <TextView
            android:id="@+id/shot_love_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/m_space"
            android:drawablePadding="3dp"
            android:drawableStart="@mipmap/ic_heart"
            android:gravity="center_vertical"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/font_size_tiny"
            tools:text="300" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color" />

    <TextView
        android:id="@+id/shot_description"
        android:layout_margin="@dimen/l_space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/font_dark"
        android:textSize="@dimen/font_size_medium"
        tools:text="A motion experiment featuring a cool new icon set coming soon to UI8."/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="@dimen/l_space"
        android:layout_marginEnd="@dimen/l_space"
        android:background="@color/line_color" />
</LinearLayout>